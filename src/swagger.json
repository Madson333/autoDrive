{
  "openapi": "3.0.0",
  "info": {
    "title": "Rentalx documentação da API",
    "version": "1.0.0",
    "description": "API para cadastro e autenticação de usuários."
  },
  "servers": [
    {
      "url": "http://localhost:3333",
      "description": "Servidor local"
    }
  ],
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "Specification": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": { "type": "string" }
        }
      },
      "ImportResult": {
        "type": "object",
        "properties": {
          "imported": { "type": "integer", "format": "int32" },
          "fileName": { "type": "string" }
        }
      }
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Categories"],
        "summary": "Create a category",
        "description": "Create a new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" }
                },
                "example": {
                  "name": "Category name",
                  "description": "Category description"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Categoria criada com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Category" },
                "example": {
                  "id": "c9a1f5b8-1a2b-4c3d-8e9f-0123456789ab",
                  "name": "Category name",
                  "description": "Category description",
                  "created_at": "2026-02-10T12:00:00Z"
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" },
                "example": { "message": "Nome é obrigatório" }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Categories"],
        "summary": "List categories",
        "description": "Retorna uma lista de categorias",
        "responses": {
          "200": {
            "description": "Lista de categorias",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Category" }
                },
                "example": [
                  {
                    "id": "c9a1f5b8-1a2b-4c3d-8e9f-0123456789ab",
                    "name": "Category A",
                    "description": "Desc A",
                    "created_at": "2026-02-10T12:00:00Z"
                  },
                  {
                    "id": "d8b2e6c7-2b3c-5d4e-9f0a-1234567890ab",
                    "name": "Category B",
                    "description": "Desc B",
                    "created_at": "2026-02-09T09:30:00Z"
                  }
                ]
              }
            }
          }
        }
      }
    },
    "/categories/import": {
      "post": {
        "tags": ["Categories"],
        "summary": "Import categories from CSV",
        "description": "Importa categorias a partir de um arquivo CSV",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": { "type": "string", "format": "binary" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Arquivo importado com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ImportResult" },
                "example": { "imported": 3, "fileName": "categories.csv" }
              }
            }
          },
          "400": {
            "description": "Requisição inválida",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" },
                "example": { "message": "Arquivo ausente ou formato inválido" }
              }
            }
          }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": ["Specifications"],
        "summary": "Create a specification",
        "description": "Create a new specification",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" }
                },
                "example": {
                  "name": "Spec name",
                  "description": "Spec description"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Specification criada com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Specification" },
                "example": {
                  "id": "a1b2c3d4-5e6f-7a8b-9c0d-1234567890ab",
                  "name": "Spec name",
                  "description": "Spec description",
                  "created_at": "2026-02-10T12:00:00Z"
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" },
                "example": { "message": "Nome já existe" }
              }
            }
          }
        }
      }
    }
  }
}
